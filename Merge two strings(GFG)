Merge two strings 
//Logic only

class Solution 
{ 
    String merge(String S1, String S2)
    { 
        StringBuilder s = new StringBuilder();
        
        for(int i=0; i<S1.length() || i<S2.length(); i++){
            if(i<S1.length())
                s.append(S1.charAt(i));
            if(i<S2.length())
                s.append(S2.charAt(i));
        }
        
        return s.toString();
    }
} 
