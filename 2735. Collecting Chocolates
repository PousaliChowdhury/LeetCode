class Solution:
    def minCost(self, nums: List[int], x: int) -> int:
        n = len(nums)
        cost = 0
        arr = nums[:]
        total = sum(nums)
        for k in range(1,n):
            for i in range(n):
                arr[i] = min(arr[i],nums[(i+k) % n])
            cost = min(total, sum(arr) + k * x)
        return cost

